                    class="w-full rounded-md border-gray-300 bg-white shadow-sm py-2 px-3" />
                <div class="flex gap-2">
                    <button @click="saveRoaster()"
                        class="flex-1 bg-brown-600 text-white px-4 py-2 rounded hover:bg-brown-700">Save</button>
                    <button @click="showRoasterForm = false"
                        class="flex-1 bg-gray-300 px-4 py-2 rounded hover:bg-gray-400">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Grinder Form Modal -->
    <div x-show="showGrinderForm" class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50">
        <div class="bg-brown-100 rounded-lg border border-brown-300 p-8 max-w-md w-full mx-4">
            <h3 class="text-xl font-semibold mb-4 text-gray-800" x-text="editingGrinder ? 'Edit Grinder' : 'Add Grinder'"></h3>
            <div class="space-y-4">
                <input type="text" x-model="grinderForm.name" placeholder="Name *"
                    class="w-full rounded-md border-gray-300 bg-white shadow-sm py-2 px-3" />
                <select x-model="grinderForm.grinder_type" class="w-full rounded-md border-gray-300 bg-white shadow-sm py-2 px-3">
                    <option value="">Select Grinder Type *</option>
                    <option value="Hand">Hand</option>
                    <option value="Electric">Electric</option>
                    <option value="Portable Electric">Portable Electric</option>
                </select>
                <select x-model="grinderForm.burr_type" class="w-full rounded-md border-gray-300 bg-white shadow-sm py-2 px-3">
                    <option value="">Select Burr Type (Optional)</option>
                    <option value="Conical">Conical</option>
                    <option value="Flat">Flat</option>
                </select>
                <textarea x-model="grinderForm.notes" placeholder="Notes" rows="3"
                    class="w-full rounded-md border-gray-300 bg-white shadow-sm py-2 px-3"></textarea>
                <div class="flex gap-2">
                    <button @click="saveGrinder()"
                        class="flex-1 bg-brown-600 text-white px-4 py-2 rounded hover:bg-brown-700">Save</button>
                    <button @click="showGrinderForm = false"
                        class="flex-1 bg-gray-300 px-4 py-2 rounded hover:bg-gray-400">Cancel</button>
                </div>
            </div>
        </div>
    </div>

