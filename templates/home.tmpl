{{define "content"}}
<div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow-md p-8 mb-8">
        <div class="flex items-center gap-3 mb-4">
            <h2 class="text-3xl font-bold text-gray-800">Welcome to Arabica</h2>
            <span class="text-xs bg-yellow-500 text-brown-900 px-2 py-1 rounded font-semibold">ALPHA</span>
        </div>
        <p class="text-gray-600 mb-2">Track your coffee brewing journey with detailed logs of every cup.</p>
        <p class="text-sm text-gray-500 italic mb-6">Note: Arabica is currently in alpha. Features and data structures may change.</p>

        {{if .IsAuthenticated}}
        <!-- Authenticated: Show app actions and logout -->
        <div class="mb-6">
            <p class="text-sm text-gray-600">Logged in as: <span class="font-mono text-blue-600">{{.UserDID}}</span></p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
            <a href="/brews/new"
                class="block bg-brown-600 text-white text-center py-4 px-6 rounded-lg hover:bg-brown-700 transition">
                <span class="text-xl">+ Add New Brew</span>
            </a>
            <a href="/brews"
                class="block bg-gray-600 text-white text-center py-4 px-6 rounded-lg hover:bg-gray-700 transition">
                <span class="text-xl">View All Brews</span>
            </a>
        </div>
        <div class="text-center mt-6">
            <form action="/logout" method="POST" class="inline-block">
                <input type="hidden" name="csrf_token" class="csrf-token-field">
                <button type="submit"
                    class="bg-red-600 text-white py-3 px-8 rounded-lg hover:bg-red-700 transition text-lg">
                    Logout
                </button>
            </form>
        </div>
        {{else}}
        <!-- Not authenticated: Show login -->
        <div>
            <p class="text-gray-700 mb-6 text-center">Please log in with your AT Protocol handle to start tracking your brews.</p>
            <form method="POST" action="/auth/login" class="max-w-md mx-auto">
                <input type="hidden" name="csrf_token" class="csrf-token-field">
                <div class="relative">
                    <label for="handle" class="block text-sm font-medium text-gray-700 mb-2">Your Handle</label>
                    <input
                        type="text"
                        id="handle"
                        name="handle"
                        placeholder="alice.bsky.social"
                        autocomplete="off"
                        required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    />
                    <!-- FIX: image is way too big-->
                    <div id="autocomplete-results" class="hidden absolute z-10 w-full mt-1 bg-white border border-gray-300 rounded-lg shadow-lg max-h-60 overflow-y-auto"></div>
                </div>
                <button
                    type="submit"
                    class="w-full mt-4 bg-blue-600 text-white py-3 px-8 rounded-lg hover:bg-blue-700 transition text-lg font-medium">
                    Log In
                </button>
            </form>
            
            <script src="/static/js/handle-autocomplete.js"></script>
        </div>
        {{end}}
    </div>

    <!-- Community Feed -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
        <h3 class="text-xl font-semibold text-gray-800 mb-4">Community Feed</h3>
        <div hx-get="/api/feed" hx-trigger="load" hx-swap="innerHTML">
            <!-- Loading state -->
            <div class="space-y-4">
                <div class="animate-pulse">
                    <div class="bg-gray-100 rounded-lg p-4">
                        <div class="flex items-center gap-3 mb-3">
                            <div class="w-10 h-10 rounded-full bg-gray-300"></div>
                            <div class="flex-1">
                                <div class="h-4 bg-gray-300 rounded w-1/4 mb-2"></div>
                                <div class="h-3 bg-gray-200 rounded w-1/6"></div>
                            </div>
                        </div>
                        <div class="bg-gray-200 rounded-lg p-3">
                            <div class="h-4 bg-gray-300 rounded w-3/4 mb-2"></div>
                            <div class="h-3 bg-gray-200 rounded w-1/2"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-blue-50 rounded-lg p-6 border border-blue-200">
        <h3 class="text-lg font-semibold text-blue-900 mb-2">About Arabica</h3>
        <ul class="text-blue-800 space-y-2">
            <li>- <strong>Decentralized:</strong> Your data lives in your Personal Data Server (PDS)</li>
            <li>- <strong>Portable:</strong> Own your coffee brewing history</li>
            <li>- Track brewing variables like temperature, time, and grind size</li>
            <li>- Organize beans by origin and roaster</li>
            <li>- Add tasting notes and ratings to each brew</li>
        </ul>
    </div>
</div>
{{end}}
